<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Posts</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white flex items-center justify-center min-h-screen p-5">

    <div class="w-full max-w-3xl">
        <!-- Profile Button -->
        <div class="w-full flex justify-end mb-5">
            <a class="bg-blue-500 hover:bg-blue-600 transition px-4 py-2 rounded-md text-sm" href="/profile">Profile</a>
        </div>

        <!-- Page Title -->
        <h3 class="text-3xl font-semibold mb-5 text-center">All Posts</h3>

        <!-- Posts Container -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
            <% posts.forEach(post => { %>
                <div class="bg-gray-800 p-4 rounded-lg shadow-md">
                    <!-- Clickable Username -->
                    <h4>
                        <a href="/user/<%= post.user._id %>" class="text-blue-400 hover:text-blue-500">
                            @<%= post.user.name %>
                        </a>
                    </h4>
                    <p class="text-lg"><%= post.content %></p>
                    <div class="flex justify-between items-center mt-3">
                        <p class="text-gray-400 text-sm"><%= new Date(post.createdAt).toLocaleDateString() %></p>
                        <a href="/like/<%= post._id %>" class="text-red-400 hover:text-red-500">
                            ❤️ <%= post.likes.length %>
                        </a>
                    </div>
                </div>
            <% }) %>
            
        </div>
    </div>

</body>
</html>
